{
  "family": "tariffsheriff-frontend-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::229037374885:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::229037374885:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "frontend",
      "image": "229037374885.dkr.ecr.ap-southeast-1.amazonaws.com/tariffsheriff-frontend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "protocol": "tcp",
          "name": "frontend-80-tcp"
        }
      ],
      "environment": [
        {
          "name": "NGINX_PORT",
          "value": "80"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/tariffsheriff-frontend-task",
          "awslogs-region": "ap-southeast-1",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:80/ || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 30
      }
    }
  ]
}
